<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table"
    tools:context=".PassportFragment"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_background"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/pass_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="中華民國公民 PEOPLE`S REPUBLIC OF CHINA"

            android:textColor="#F8B47F"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_titlr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Name / 姓名"
            android:textColor="#F8B47F"
            android:textSize="5dp"
            app:layout_constraintStart_toEndOf="@+id/profileImg"
            app:layout_constraintTop_toTopOf="@+id/profileImg" />

        <TextView
            android:id="@+id/signature_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Signature / 簽名"
            android:textColor="#F8B47F"
            android:textSize="5dp"
            app:layout_constraintEnd_toStartOf="@+id/sex"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="@+id/profileImg"
            app:layout_constraintTop_toBottomOf="@+id/profileImg" />

        <TextView
            android:id="@+id/passport_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passport no. / 護照號"
            android:textColor="#F8B47F"
            android:textSize="5dp"
            app:layout_constraintStart_toStartOf="@+id/nationality_title"
            app:layout_constraintTop_toTopOf="@+id/name_titlr" />

        <TextView
            android:id="@+id/nationality_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:text="Nationality / 國籍"
            android:textColor="#F8B47F"
            android:textSize="5dp"
            app:layout_constraintStart_toEndOf="@+id/sex_tilte"
            app:layout_constraintTop_toTopOf="@+id/sex_tilte" />

        <TextView
            android:id="@+id/sex_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Sex / 性別"
            android:textColor="#F8B47F"
            android:textSize="5dp"
            app:layout_constraintStart_toEndOf="@+id/profileImg"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/place_birth_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Place of birth / 出生地"
            android:textColor="#F8B47F"
            android:textSize="5dp"
            app:layout_constraintStart_toStartOf="@+id/sex_tilte"
            app:layout_constraintTop_toBottomOf="@+id/sex" />


        <TextView
            android:id="@+id/date_birth_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Data of birth / 比特數據"
            android:textColor="#F8B47F"
            android:textSize="5dp"
            app:layout_constraintStart_toStartOf="@+id/nationality"
            app:layout_constraintTop_toBottomOf="@+id/sex" />

        <TextView
            android:id="@+id/date_of_expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data of expiry / 到期數據"
            android:textColor="#F8B47F"
            android:textSize="5dp"
            app:layout_constraintStart_toStartOf="@+id/nationality"
            app:layout_constraintTop_toTopOf="@+id/place_of_isssue_tilte" />

        <TextView
            android:id="@+id/place_of_isssue_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Place of issue / 簽發地點"
            android:textColor="#F8B47F"
            android:textSize="5dp"
            app:layout_constraintStart_toStartOf="@+id/sex_tilte"
            app:layout_constraintTop_toBottomOf="@+id/place_of_birth" />

        <TextView
            android:id="@+id/authority_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Authority / 權威"
            android:textColor="#F8B47F"
            android:textSize="5dp"
            app:layout_constraintStart_toStartOf="@+id/sex_tilte"
            app:layout_constraintTop_toBottomOf="@+id/place_of_isssue" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SE22330012"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/passport_no"
            app:layout_constraintTop_toBottomOf="@+id/passport_no" />


        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="LI VEY"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/profileImg"
            app:layout_constraintTop_toBottomOf="@+id/name_titlr" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Man / 男人"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/profileImg"
            app:layout_constraintTop_toBottomOf="@+id/sex_tilte" />

        <TextView
            android:id="@+id/nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chainese / 凱恩斯"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/nationality_title"
            app:layout_constraintTop_toBottomOf="@+id/sex_tilte" />


        <TextView
            android:id="@+id/place_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Chungani / 中加尼"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/profileImg"
            app:layout_constraintTop_toBottomOf="@+id/place_birth_tilte" />

        <TextView
            android:id="@+id/place_of_expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09 JUN 2024"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/date_of_expiry"
            app:layout_constraintTop_toBottomOf="@+id/date_of_expiry" />

        <TextView
            android:id="@+id/data_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03 MAY 1988"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/date_birth_tilte"
            app:layout_constraintTop_toBottomOf="@+id/place_birth_tilte" />

        <TextView
            android:id="@+id/place_of_isssue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chungani / 中加尼"
            android:textSize="10dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@+id/profileImg"
            app:layout_constraintTop_toBottomOf="@+id/place_of_isssue_tilte" />

        <TextView
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alex_brush"
            android:text="LiveY"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="@+id/signature_title"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="@+id/signature_title"
            app:layout_constraintTop_toBottomOf="@+id/signature_title" />

        <TextView
            android:id="@+id/Authority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="外交部 / MINISTRY OF FOREIGN AFFAIRS"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/profileImg"
            app:layout_constraintTop_toBottomOf="@+id/authority_tilte" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/biometric_passport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline2" />

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginTop="28dp"
            android:paddingRight="20dp"
            android:background="@drawable/vei_chang"
            app:layout_constraintStart_toStartOf="@+id/id_title"
            app:layout_constraintTop_toBottomOf="@+id/id_title" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Chainse PasssportChainse PasssportChainse PasssportChainse PasssportChainse PasssportChainse PasssportChainse PasssportChainse PasssportChainse PasssportChainse PasssportChainse Passsport"
            android:textSize="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <TextView
            android:id="@+id/chiper1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/chiper2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            app:layout_constraintEnd_toEndOf="@+id/chiper1"
            app:layout_constraintStart_toStartOf="@+id/chiper1"
            app:layout_constraintTop_toBottomOf="@+id/chiper1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Continue"
        android:backgroundTint="#2545B8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>